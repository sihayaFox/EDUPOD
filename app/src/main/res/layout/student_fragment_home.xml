<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_fragments.StudentHomeFragment">


    <Button
        android:id="@+id/btn_help_desk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Desk"
        app:layout_constraintBottom_toTopOf="@+id/btn_extra_books"
        app:layout_constraintEnd_toEndOf="@+id/btn_extra_books"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_extra_books"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_extra_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extra books"
        app:layout_constraintBottom_toTopOf="@+id/btn_feedback"
        app:layout_constraintEnd_toEndOf="@+id/btn_feedback"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_feedback"
        app:layout_constraintTop_toBottomOf="@+id/btn_help_desk" />

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedbacks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_extra_books" />
</androidx.constraintlayout.widget.ConstraintLayout>