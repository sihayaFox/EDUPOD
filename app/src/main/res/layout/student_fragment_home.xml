<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#722C6B"
    android:layout_margin="16dp"
    tools:context=".student_fragments.StudentHomeFragment">


    <Button
        android:id="@+id/btn_help_desk"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:backgroundTint="#722C6B"
        android:fontFamily="@font/montserrat_bold"
        android:text="Help Desk"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_extra_books"
        app:layout_constraintEnd_toEndOf="@+id/btn_extra_books"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_extra_books"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_extra_books"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#722C6B"
        android:fontFamily="@font/montserrat_bold"
        android:text="Extra books"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_feedback"
        app:layout_constraintEnd_toEndOf="@+id/btn_feedback"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_feedback"
        app:layout_constraintTop_toBottomOf="@+id/btn_help_desk" />

    <Button
        android:id="@+id/btn_feedback"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#722C6B"
        android:fontFamily="@font/montserrat_bold"
        android:text="Feedbacks"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_extra_books" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Welcome Home"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>