<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/txt_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_end_time_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="09.00AM"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_time"
        app:layout_constraintStart_toEndOf="@+id/txt_subject_2"
        app:layout_constraintTop_toTopOf="@+id/txt_time"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_subject_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Science"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_time"
        app:layout_constraintStart_toEndOf="@+id/txt_time"
        app:layout_constraintTop_toTopOf="@+id/txt_time" />

    <TextView
        android:id="@+id/txt_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade 11 A"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/txt_time"
        app:layout_constraintTop_toTopOf="@+id/txt_date" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="08.00 AM"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_date_value"
        app:layout_constraintStart_toEndOf="@+id/txt_date_value"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="MON"
        android:maxLength="3"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_date_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_date_value" />

    <ImageView
        android:id="@+id/img_chk"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>